set -o verbose

echo "------ Building and Installing $SETUPTOOLS_SRC ----------"

rm -rf $SETUPTOOLS_SRC
tar -xzf /sw/sources/python/$PYTHON_VER/$SETUPTOOLS_SRC.tar.gz
cd $SETUPTOOLS_SRC

python setup.py install --prefix=${SW_BLDDIR}

if [ $? -ne 0 ] ; then
  echo "Installation of \"setuptools\" failed."
  exit 1
fi
cd ..

which easy_install
easy_install pip

set +o verbose
