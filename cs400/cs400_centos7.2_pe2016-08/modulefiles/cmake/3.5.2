#%Module
#Adios library and apps

set desc        "This modulefile sets up environment to use CMake."
set whatis      "CMake is a cross-platform, open-source build system."
set onload      ""

set arch        cs400_centos7.2_pe2016-08
set app         cmake
set ver         3.5.2
set build       centos7.2_gnu4.8.5

#------------------------------------------------

proc ModulesHelp { } {
  global desc whatis
  puts stderr "$desc"
  puts stderr "$whatis"
}

module-whatis $whatis

if { [ string length $onload ] > 0 } {
  if [ module-info mode load ] {
    puts stderr "$onload"
  }
}

set app_dir     /software/dev_tools/swtree/$arch/$app/$ver/$build
set app_inc     $app_dir/include
set app_lib     $app_dir/lib

prepend-path    PATH            $app_dir/bin
prepend-path    MANPATH         $app_dir/man

set APP         [string toupper $app]

setenv          ${APP}_DIR      $app_dir

